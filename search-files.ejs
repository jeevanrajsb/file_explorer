<%- include('partials/head')%>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/comments">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>  
  </nav>
  <br>
    <form action="/comments/search">
        <input   type="text" placeholder="Search" name ="ele" aria-label="Search">
        <h1></h1>
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <div >
            <% for(let c of comments) {%>
                <div class="row row-cols-4">
                    <div class="col-3" >
                        <b><%= c.title%></b>
                    </div>
                    <div class="col">
                        <a href="/comments/<%= c.id%>">
                            <button type="button" class="btn btn-info">View</button>
                        </a>
                    </div>
                    <div class="col">
                        <a href="/comments/<%= c.id%>/edit">
                            <button type="button" class="btn btn-primary" href="/comments/<%= c.id%>/edit">Edit</button>
                        </a>
                    </div>
                    <div class="col">
                        <form method="post" action="/comments/<%= c.id %>?_method=delete">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                  </div>
                  <br>
            <% } %>
            </div>
    </div>
    
<%- include('partials/footer')%>